{
   "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "disableSizeLimit": true,
      "isolatedModules": true,
      "lib": [ "DOM", "ESNext" ],
      "module": "ESNext",
      "moduleResolution": "node",
      "noEmit": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "strict": true,
      "target": "ES2015"
   },
   "include": [
      "./index.ts",
      "./code/index.ts",
      "./code/TextGenerator.ts"
   ]
}